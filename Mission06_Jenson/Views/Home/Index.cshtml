@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@* header and image for Joel Hilton's Film Collection*@
<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-primary mb-4">
                The Joel Hilton Film Collection
            </h1>

            <div class="mb-4">
                <img src="~/images/joel hilton.jpg" 
                     alt="The wise Joel Hilton" 
                     class="img-fluid rounded-circle shadow-lg border border-3 border-light" 
                     style="width: 250px; height: 250px; object-fit: cover;">
            </div>
@* Giving a nice introduction *@
            <p class="lead text-muted">
                Welcome to the definitive archive of cinema, curated by the legendary Joel Hilton himself.
            </p>
            
            <hr class="my-4 w-25 mx-auto">
        </div>
    </div>
</div>